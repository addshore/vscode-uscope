{
  "name": "uscope",
  "version": "1.1.0",
  "publisher": "addshore",
  "displayName": "μScope RTT and SWO viewer",
  "description": "View RTT and SWO debug consoles",
  "icon": "media/icon.png",
  "engines": {
    "vscode": "^1.50.0"
  },
  "license": "MIT",
  "repository": "github:addshore/vscode-uscope",
  "author": "Tom Smeets <tom@tsmeets.nl> (https://tsmeets.nl)",
  "contributors": [
    "addshore (https://addshore.com)"
  ],
  "categories": [ "Visualization", "Debuggers" ],
  "keywords": [ "rtt", "swo", "gdb", "debug", "stm32" ],
  "activationEvents": [
    "onView:uscope-view"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "panel": [
        {
          "id": "uscope-con",
          "title": "uScope",
          "icon": ""
        }
      ]
    },

    "views": {
      "uscope-con": [
        {
          "type": "webview",
          "id": "uscope-view",
          "name": "uScope"
        }
      ]
    }
    ,
    "configuration": {
      "title": "μScope",
      "properties": {
        "uscope.filter.defaultType": {
          "type": "string",
          "enum": ["simple", "regex"],
          "default": "simple",
          "description": "Default filter type used in the console UI"
        },
        "uscope.defaults.jlinkRtt.host": {
          "type": "string",
          "default": "127.0.0.1",
          "description": "Default host for SEGGER J-Link RTT"
        },
        "uscope.defaults.jlinkRtt.port": {
          "type": "number",
          "default": 19021,
          "description": "Default port for SEGGER J-Link RTT"
        },
        "uscope.defaults.jlinkSwo.host": {
          "type": "string",
          "default": "127.0.0.1",
          "description": "Default host for SEGGER J-Link SWO"
        },
        "uscope.defaults.jlinkSwo.port": {
          "type": "number",
          "default": 2332,
          "description": "Default port for SEGGER J-Link SWO"
        },
        "uscope.defaults.jlinkTelnet.host": {
          "type": "string",
          "default": "127.0.0.1",
          "description": "Default host for SEGGER J-Link Telnet"
        },
        "uscope.defaults.jlinkTelnet.port": {
          "type": "number",
          "default": 2333,
          "description": "Default port for SEGGER J-Link Telnet"
        },
        "uscope.defaults.stlinkRttGdb.host": {
          "type": "string",
          "default": "127.0.0.1",
          "description": "Default host for ST-Link (RTT over GDB)"
        },
        "uscope.defaults.stlinkRttGdb.port": {
          "type": "number",
          "default": 61234,
          "description": "Default port for ST-Link (RTT over GDB)"
        },
        "uscope.defaults.stlinkSwo.host": {
          "type": "string",
          "default": "127.0.0.1",
          "description": "Default host for ST-Link SWO"
        },
        "uscope.defaults.stlinkSwo.port": {
          "type": "number",
          "default": 61235,
          "description": "Default port for ST-Link SWO"
        },
        "uscope.defaults.openocdRttGdb.host": {
          "type": "string",
          "default": "127.0.0.1",
          "description": "Default host for OpenOCD (RTT over GDB)"
        },
        "uscope.defaults.openocdRttGdb.port": {
          "type": "number",
          "default": 3333,
          "description": "Default port for OpenOCD (RTT over GDB)"
        },
        "uscope.defaults.openocdSwo.host": {
          "type": "string",
          "default": "127.0.0.1",
          "description": "Default host for OpenOCD SWO"
        },
        "uscope.defaults.openocdSwo.port": {
          "type": "number",
          "default": 3344,
          "description": "Default port for OpenOCD SWO"
        }
        ,
        "uscope.savedTabs": {
          "type": "array",
          "description": "Saved filter tabs for the workspace. These are shown as tabs in μScope on project open.",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string", "description": "Optional stable id for the saved tab" },
              "name": { "type": "string", "description": "Optional display name for the tab" },
              "filter": { "type": "string", "description": "Filter string for the tab" },
              "filterType": { "type": "string", "enum": ["simple", "regex"], "default": "simple" },
              "highlight": { "type": "string", "description": "Optional highlight text/pattern for this tab" },
              "highlightType": { "type": "string", "enum": ["simple", "regex"], "default": "simple" },
              "highlightColor": { "type": "string", "description": "CSS color for highlight (e.g. '#ffff00' or 'yellow')" }
            }
          },
          "default": []
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "rtt-emulator": "node ./tools/rtt-emulator.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.50.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "minimist": "^1.2.8",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.0.4",
    "@vscode/test-electron": "^2.3.0"
  }
}
